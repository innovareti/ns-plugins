{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
	"declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
	"noEmitHelpers": true,
	"noEmitOnError": true,
	"skipLibCheck": true,
           "lib": [
            "es6",
            "dom"
        ],
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
	"../src/node_modules"
    ],
    "include": [
		"../src",
		"**/*"
	]
}