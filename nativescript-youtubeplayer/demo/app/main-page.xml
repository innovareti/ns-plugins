<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" 
  xmlns:ui="nativescript-youtubeplayer">
    <GridLayout rows="*,auto,auto,auto,auto,auto,auto" height="100%" class="p-20" id="container">
      <ui:YoutubePlayer id="player" options="{{options}}" apiKey="AIzaSyAUm14Rg9vH_Zv9X5BeWQ8UyMMypEq4htA" src="{{src}}" backgroundColor="gray" />
      <Button row="1" text="Toggle FullScreen" tap="toggleFullScreen"/>
      <Button row="2" text="Change Source" tap="{{changeSource}}"/>
      <Button row="3" text="Load Dancehall" tap="{{getDanceHall}}"/>
      <Button row="4" text="Load HipHop" tap="{{getHipHop}}"/>
      <Button row="5" text="Load Soca" tap="{{getSoca}}"/>
    </GridLayout>
</Page>